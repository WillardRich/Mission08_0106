@model Mission08_0106.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Delete Task</h1>
            <div class="alert alert-warning">
                Are you sure you want to delete this task?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Task</dt>
                <dd class="col-sm-9">@Model.TaskName</dd>

                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">@(Model.DueDate.HasValue ? Model.DueDate.Value.ToShortDateString() : "None")</dd>

                <dt class="col-sm-3">Quadrant</dt>
                <dd class="col-sm-9">@Model.Quadrant</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.CategoryName</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="TaskItemId" />
                <input type="hidden" asp-for="CategoryId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
