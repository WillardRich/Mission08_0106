@model (int q, List<Mission08_0106.Models.TaskItem> tasks)

<div class="card h-100">
    <div class="card-body d-flex flex-column">
        @if (!Model.tasks.Any())
        {
            <p class="text-muted">No tasks</p>
        }
        else
        {
            <ul class="list-group list-group-flush mb-3">
                @foreach (var task in Model.tasks)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@task.TaskName</strong>
                                <div class="small text-muted">
                                    @task.Category?.CategoryName
                                    @if (task.DueDate.HasValue)
                                    {
                                        <text>• @task.DueDate.Value.ToShortDateString()</text>
                                    }
                                </div>
                            </div>

                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@task.TaskItemId" class="btn btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@task.TaskItemId" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </div>

                        <div class="mt-2">
                            <form asp-action="MarkComplete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@task.TaskItemId" />
                                <button type="submit" class="btn btn-success btn-sm">Mark Complete</button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</div>